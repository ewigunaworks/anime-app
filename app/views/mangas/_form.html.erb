<style>
    .card {
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-header {
        padding: .75rem 1.25rem;
        margin-bottom: 0;
        background-color: rgba(0,0,0,.03);
        border-bottom: 1px solid rgba(0,0,0,.125);
        font-weight: bold;
    }

    .card-body {
        -webkit-box-flex: 1;
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: 1.25rem;
    }

    .margin-top-10 {
        margin-top:1.25rem;
    }

    label {
      font-weight: bold;
    }
</style>

<div class="row">
    <div class="col-lg-12">
      <%= form_for(MemberFavourite.new, url: favorites_path, html: {class: 'form-horizontal client'}) do |f| %>
        <%= f.hidden_field :id, value: @mangas['mal_id']  %>
        <%= f.hidden_field :score, value: @mangas['score']  %>
        <%= f.hidden_field :title, value: @mangas['title']  %>
        <%= f.hidden_field :type, value: 'manga'  %>
        <% if @favorites_added %>
          <%= f.submit 'Favorited', class: 'btn btn-primary btn-length-medium' %>
        <% else %>
            <%= f.submit 'Add to Favorite', class: 'btn btn-primary btn-length-medium' %>
        <% end %>
      <% end %>
    </div>
</div>
<div class="row">
    <div class="left margin-top-10 col-lg-6">
        <div class="card">
            <div class="card-header">
                Title
            </div>
            <div class="card-body">
                <div class="form-group">
                  <label class="col-sm-4">Title</label>
                  <div class="col-sm-8">
                      <%= @mangas["title"] %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-8">
                      <img src="<%= @mangas["image_url"] %>" alt="<%= @mangas['title'] %>">
                  </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                Alternatives Title
            </div>
            <div class="card-body">
                <div class="form-group">
                  <label class="col-sm-4">English</label>
                  <div class="col-sm-8">
                      <%= @mangas["title_english"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">japanese</label>
                  <div class="col-sm-8">
                      <%= @mangas["title_japanese"] %>
                  </div>
                </div>
            </div>
        </div>
        <div class="card margin-top-10">
            <div class="card-header">
                Information
            </div>
            <div class="card-body">
                <div class="form-group">
                  <label class="col-sm-4">Type</label>
                  <div class="col-sm-8">
                      <%= @mangas["type"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Volumes</label>
                  <div class="col-sm-8">
                      <%= @mangas["volumes"] == 'null' ? @mangas["volumes"] : '-' %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Chapter</label>
                  <div class="col-sm-8">
                      <%= @mangas["chapters"] == 'null' ? @mangas["chapters"] : '-' %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Status</label>
                  <div class="col-sm-8">
                      <%= @mangas["status"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Published</label>
                  <div class="col-sm-8">
                      <%= @mangas["published"]["string"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Genres</label>
                  <div class="col-sm-8">
                      <% @mangas["genres"].each do |genre| %>
                          <%= genre['name'] %>
                      <% end %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Authors</label>
                  <div class="col-sm-8">
                    <% @mangas["authors"].each do |author| %>
                        <%= author['name'] %>
                    <% end %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Serialization</label>
                  <div class="col-sm-8">
                    <% @mangas["serializations"].each do |serialization| %>
                        <%= serialization['name'] %>
                    <% end %>
                  </div>
                </div>
            </div>
        </div>
    </div>

    <div class="right margin-top-10 col-lg-6">
        <div class="card">
            <div class="card-header">
                Statistics
            </div>
            <div class="card-body">
                <div class="form-group">
                  <label class="col-sm-4">Score</label>
                  <div class="col-sm-8">
                      <%= @mangas["score"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Scored By</label>
                  <div class="col-sm-8">
                      <%= @mangas["scored_by"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Ranked</label>
                  <div class="col-sm-8">
                      <%= @mangas["rank"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Popularity</label>
                  <div class="col-sm-8">
                      <%= @mangas["popularity"] %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-4">Members</label>
                  <div class="col-sm-8">
                      <%= @mangas["members"] %>
                  </div>
                </div>
            </div>
        </div>
        <div class="card margin-top-10">
            <div class="card-header">
                Synopsis
            </div>
            <div class="card-body">
                <div class="form-group">
                  <div class="col-sm-12">
                      <%= @mangas["synopsis"] %>
                  </div>
                </div>
            </div>
        </div>
        <div class="card margin-top-10">
            <div class="card-header">
                Background
            </div>
            <div class="card-body">
                <div class="form-group">
                  <div class="col-sm-12">
                      <%= @mangas["background"] %>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
